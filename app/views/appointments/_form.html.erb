<%= simple_form_for(@appointment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :patient %>
    <%= f.text_field :start_date, :placeholder => 'Select date', input_html: {class: "form-control"} %>
    <%= f.input :start_time %>


    <% if current_user.admin? %>
    <%= f.input :confirmed %>
    <% end %>

  </div>
    <%= f.simple_fields_for :avail_services do |avail_service| %>
      <%= render 'avail_service_fields', f: avail_service %>
    <% end %>
   <div class="links">
      <%= link_to_add_association 'Add Service To do', f, :avail_services, class: "btn btn-default" %>
    </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
