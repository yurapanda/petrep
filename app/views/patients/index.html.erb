<p id="notice"><%= notice %></p>
<div class="well">
<% if current_user.admin? %>
  <h1>Patients</h1>
<% else %>
  <h1> Pets </h1>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Owner</th>
      <th>Breed</th>
      <th>Gender</th>
      <th>Description</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
  <% if current_user.admin? %>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.name %></td>
        <td><%= patient.user.email %></td>
        <td><%= patient.breed.name %></td>
        <td><%= patient.gender.name %></td>
        <td><%= patient.description %></td>
        <td><%= link_to 'Show', patient %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% else %>
 <% @patients.each do |patient| %>
      <tr>
      <% if patient.user.id == current_user.id %>
        <td><%= patient.name %></td>
        <td><%= patient.user.email %></td>
        <td><%= patient.breed.name %></td>
        <td><%= patient.gender.name %></td>
        <td><%= patient.description %></td>
        <td><%= link_to 'Show', patient %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% end %>
<%= link_to 'New Patient', new_patient_path %>
</div>
