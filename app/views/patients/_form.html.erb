<%= simple_form_for(@patient) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
  <%= f.association :user, label_method: :email, value_method: :id, include_blank: false , label: "Owner" %>
    <%= f.association :breed %>
    <%= f.association :gender %>
    <%= f.input :birth_date %>
    <%= f.input :description %>

     <%= f.input :picture, as: :file %>
  </div>
  <%= f.simple_fields_for :done_vaccinations do |done_vaccination| %>
      <%= render 'done_vaccination_fields', f: done_vaccination %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Add Recieved Vaccinations', f, :done_vaccinations, class: "btn btn-default" %>
    </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
